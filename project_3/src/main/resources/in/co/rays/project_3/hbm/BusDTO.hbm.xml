<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="in.co.rays.project_3.dto">

    <class name="BusDTO" table="ST_BUS">

        <id name="id" type="java.lang.Long">
            <column name="ID" />
            <generator class="increment" />
        </id>

        <property name="busNumber" type="java.lang.String">
            <column name="BUS_NUMBER" />
        </property>

        <property name="busType" type="java.lang.String">
            <column name="BUS_TYPE" />
        </property>

        <property name="totalSeats" type="java.lang.String">
            <column name="TOTAL_SEATS" />
        </property>

        <property name="source" type="java.lang.String">
            <column name="SOURCE" />
        </property>

        <property name="destination" type="java.lang.String">
            <column name="DESTINATION" />
        </property>

        <property name="createdBy" type="java.lang.String" length="50">
            <column name="CREATED_BY" />
        </property>

        <property name="modifiedBy" type="java.lang.String" length="50">
            <column name="MODIFIED_BY" />
        </property>

        <property name="createdDatetime" type="java.sql.Timestamp">
            <column name="CREATED_DATETIME" />
        </property>

        <property name="modifiedDatetime" type="java.sql.Timestamp">
            <column name="MODIFIED_DATETIME" />
        </property>

    </class>

</hibernate-mapping>
